#include<bits/stdc++.h>
using namespace std;
int arr[] = {10 , 9, 8, 7, 6, 6};
vector<int> res;
void merge(int arr[], int l, int mid, int r)
{
  int a[mid - l +1];
  int b[r - mid];
int low = 0, high = 0;
// int k = 0;
  for(int i = 0 ; i < mid-l+1; i++ )
  {
    a[i] = arr[l+i];
    
  }
  for(int i = 0;i<r-mid; i++)
  {
    b[i] = arr[mid+1+i];
  }
  // cout<<low<<high<<endl;
  int k = l;
  int i = 0 , j = 0;
  while(i<mid-l+1 && j<r-mid)
  {
    if(a[i]>b[j])
    {
      arr[k++]= b[j++];
    }
    else{
      arr[k++] = a[i++];
    }
  }
  while(i<mid-l+1)
  {
    arr[k++]= a[i++];
  }
  while(j<r-mid)
  {
    arr[k++] = b[j++];
  }
}


void conquer(int arr[], int l, int r)
{
  if(l>=r)
    return;
  int mid = l + (r-l)/2;
  conquer(arr, l, mid);
  conquer(arr, mid+1, r);
  merge(arr, l, mid, r);
}


int main()
{
  
int n = sizeof(arr)/sizeof(arr[0]);
  cout<<"Before sort is : "<<endl;
  for(auto it: arr)
  {
    cout<<it<<endl;
  }
  conquer(arr, 0, n-1);

  cout<<"after sort is : "<<endl;
  sort(res.begin(), res.begin());

  for(auto it: arr)
  {
    cout<<it<<endl;
  }
}
